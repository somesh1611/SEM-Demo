<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:ignore="MissingConstraints">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/images" />
    </RelativeLayout>

    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:layout_width="220dp"
        android:layout_height="530dp"
        android:background="@drawable/shape_right_panel"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView android:id="@+id/tvLogin"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/LoginPanel"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        tools:ignore="MissingConstraints" />

    <TextView android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/LoginPanel"
        android:gravity="right"
        android:textColor="@android:color/white"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/LoginPanel"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:background="@drawable/shape_login_panel"
        android:layout_height="450dp"
        android:paddingTop="20dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"

        android:orientation="vertical">

        <EditText android:hint="Enter your name"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <EditText android:hint="Enter your phone number"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <Spinner android:id="@+id/sp1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            tools:ignore="InvalidId" />

        <Spinner android:id="@+id/sp2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:dropDownWidth="match_parent"
            tools:ignore="InvalidId" />

        <EditText android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <EditText android:hint="Confirm Password"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>



    </LinearLayout>

    <Button app:layout_constraintBottom_toBottomOf="@+id/LoginPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Sign Up"
        android:background="@drawable/round"
        android:textColor="@android:color/white"
        android:layout_width="150dp"
        android:layout_height="60dp"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>